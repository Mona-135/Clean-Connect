<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Essential Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- For Android 13+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Hardware features (optional) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="31">

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyADC7mSG5IR5q_ymfkwRWN2A_mrmDZAa28" />

        <!-- Main Activity as Launcher -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- Register Activity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- Dashboard Activities -->
        <activity
            android:name=".activities.CitizenDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity
            android:name=".activities.VolunteerDashboardActivity"
            android:exported="false"
            android:label="Volunteer Dashboard"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity
            android:name=".activities.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- Feature Activities -->
        <activity
            android:name=".activities.AddReportActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity
            android:name=".activities.ReportGarbageActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:label="My Profile"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity
            android:name=".activities.MyReportsActivity"
            android:exported="false"
            android:label="My Reports"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- Notification Activity -->
        <activity
            android:name=".activities.NotificationActivity"
            android:exported="false"
            android:label="Send Notification"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- Report Detail Activity -->
        <activity
            android:name=".activities.ReportDetailActivity"
            android:exported="false"
            android:label="Report Details"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- Complete Task Activity -->
        <activity
            android:name=".activities.CompleteTaskActivity"
            android:exported="false"
            android:label="Complete Task"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- Test Activity -->
        <activity
            android:name=".activities.TestActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- FileProvider for camera -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.crowdcleaning.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Firebase Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>